{
  "ssh": {
    "user": "YOUR_USERNAME",
    "host": "login.rc.fas.harvard.edu",
    "port": 22,
    "control_path": "~/.ssh/cc-research-repo-%r@%h:%p",
    "control_persist": "30m"
  },
  "remote": {
    "repo_root": "/n/home/YOUR_USERNAME/research-repo",
    "rsync_excludes": [
      ".git/",
      ".venv/",
      "projects/*/runs/",
      "projects/*/results/tmp/",
      "**/__pycache__/"
    ]
  }
}
